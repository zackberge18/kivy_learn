<MyLayout>
    BoxLayout:
        orientation:"vertical"
        size:root.width,root.height

        TextInput:
            id:calc_input
            text:"0"
            halign:"right"
            font_size:65
            size_hint:(1,0.15)
            multiline:False
        GridLayout:
            cols:4
            rows:5

            #Row
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"%"
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"CE"
                on_press:root.clear(1)
            Button:
                id:"clear"
                size_hint:(.2,.2)
                font_size:32
                text:"<<"
                on_press:root.clear(2)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"/"
                on_press:root.add_fu(4)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"7"
                background_color:(150/255,150/255,150/255,1)
                on_press:root.press(7)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"8"
                background_color:(150/255,150/255,150/255,1)
                on_press:root.press(8)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"9"
                background_color:(150/255,150/255,150/255,1)
                on_press:root.press(9)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"X"
                on_press:root.add_fu(3)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"4"
                background_color:(150/255,150/255,150/255,1)
                on_press:root.press(4)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"5"
                background_color:(150/255,150/255,150/255,1)
                on_press:root.press(5)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"6"
                background_color:(150/255,150/255,150/255,1)
                on_press:root.press(6)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"-"

                on_press:root.add_fu(2)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"1"
                background_color:(150/255,150/255,150/255,1)
                on_press:root.press(1)

            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"2"
                background_color:(150/255,150/255,150/255,1)
                on_press:root.press(2)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"3"
                background_color:(150/255,150/255,150/255,1)
                on_press:root.press(3)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"+"
                on_press:root.add_fu(1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"+/-"
                background_color:(150/255,150/255,150/255,1)
                on_press:root.pos_neg()
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"0"
                background_color:(150/255,150/255,150/255,1)
                on_press:root.press(0)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"."
                background_color:(150/255,150/255,150/255,1)
                on_press:root.dot()
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"="
                on_press:root.equal_fu()
