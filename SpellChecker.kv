<MyLayout>
	id: my_widget
	BoxLayout:

		orientation: "vertical"
		size: root.width, root.height

		padding: 50
		spacing: 20

        Label:
            id:word_label
            text_size:self.size
            halign: "center"
            valign: "middle"
            text:"enter a word"
            font_size:34

        TextInput:
            id: word_input
            multiline:False
            size_hint:(1,.5)


        Button:
            size_hint:(1,.5)
            font_size:45
            text:"submit"
            on_press:root.press()

