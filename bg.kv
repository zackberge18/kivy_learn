
<MyLayout>
    canvas.before:
        Color:
            rgba:(240/255,240/255,240/255,1)
        Rectangle:
            pos:self.pos
            size:self.size
    BoxLayout:
        orientation: "vertical"
        size:root.width,root.height
        padding:10
        spacing:10

        Label:
            text:"Name:"
            font_size:60
            background_color:(0,0,1,1)
            canvas.before:
                Color:
                    rgba:self.background_color
                Rectangle:
                    size:self.size
                    pos:self.pos
            color:(1,0,0,1)
            bold:True
            outline_color:(0,0,0)
            outline_width:10
        Button:
            text:"Clear"
            background_color:(1,0,0,1)







